/* style.css - Additional Utilities and Helpers */

/* Page Layouts */
.page-container {
  min-height: 100vh;
  padding: var(--space-8) 0;
}

.page-header {
  text-align: center;
  margin-bottom: var(--space-8);
}

.page-title {
  font-size: var(--text-4xl);
  font-weight: 700;
  margin-bottom: var(--space-2);
  color: var(--white);
}

.page-subtitle {
  color: var(--gray-400);
  font-size: var(--text-lg);
}

/* Status Badges */
.badge {
  display: inline-flex;
  align-items: center;
  padding: var(--space-1) var(--space-3);
  border-radius: var(--radius-md);
  font-size: var(--text-xs);
  font-weight: 600;
  text-transform: uppercase;
}

.badge-primary {
  background: rgba(59, 130, 246, 0.2);
  color: var(--primary);
  border: 1px solid var(--primary);
}

.badge-success {
  background: rgba(16, 185, 129, 0.2);
  color: var(--success);
  border: 1px solid var(--success);
}

.badge-error {
  background: rgba(239, 68, 68, 0.2);
  color: var(--error);
  border: 1px solid var(--error);
}

.badge-warning {
  background: rgba(245, 158, 11, 0.2);
  color: var(--warning);
  border: 1px solid var(--warning);
}

/* Divider */
.divider {
  height: 1px;
  background: var(--gray-800);
  margin: var(--space-6) 0;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: var(--space-16) var(--space-8);
}

.empty-state-icon {
  font-size: 4rem;
  margin-bottom: var(--space-4);
  opacity: 0.5;
}

.empty-state-title {
  font-size: var(--text-xl);
  font-weight: 600;
  margin-bottom: var(--space-2);
  color: var(--white);
}

.empty-state-description {
  color: var(--gray-400);
  margin-bottom: var(--space-6);
}

/* Responsive Utilities */
@media (max-width: 640px) {
  .hide-sm { display: none !important; }
}

/* Accessibility focus helper */
.btn:focus { outline: 2px solid var(--primary-cyan, #38bdf8); outline-offset: 2px; }

/*
  Background setup:
  - Place your background image at `client/public/assets/download.jpeg`.
  - The CSS below references it as `/assets/download.jpeg` (served from the public folder in CRA).
  - A dark overlay and gradient fallback keep text readable. If you prefer a hosted URL, replace the url() value.
*/
  :root {
    --error: #ef4444;
    --info: #06b6d4;
    
    /* Neutral Colors */
    --gray-50: #f9fafb;
    --gray-100: #f3f4f6;
    --gray-200: #e5e7eb;
    --gray-300: #d1d5db;
    --gray-400: #9ca3af;
    --gray-500: #6b7280;
    --gray-600: #4b5563;
    --gray-700: #374151;
    --gray-800: #1f2937;
    --gray-900: #111827;
    
    /* Typography Scale */
    --text-xs: 0.75rem;
    --text-sm: 0.875rem;
    --text-base: 1rem;
    --text-lg: 1.125rem;
    --text-xl: 1.25rem;
    --text-2xl: 1.5rem;
    --text-3xl: 1.875rem;
    --text-4xl: 2.25rem;
    --text-5xl: 3rem;
    --text-6xl: 3.75rem;
    
    /* Spacing Scale */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;
    --space-20: 5rem;
    
    /* Border Radius */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    --radius-3xl: 2rem;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
    
    /* Animation Timing */
    --duration-fast: 150ms;
    --duration-normal: 300ms;
    --duration-slow: 500ms;
    --timing-ease-out: cubic-bezier(0, 0, 0.2, 1);
    --timing-ease-in: cubic-bezier(0.4, 0, 1, 1);
   --timing-ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);

   /* Background image CSS variable. Set at runtime from JS. Default is
     the public folder path so you can drop a file at public/assets/download.jpeg
     and see it immediately without rebuilding. If you want the image bundled
     into the app, place it at src/assets/download.jpeg and the bundler will
     include it automatically. */
  /* Default to none to avoid build-time resolution by css-loader.
    Runtime code in src/index.js will set this variable to the bundled
    asset or to the public /assets/download.jpeg path as a fallback. */
  --app-bg-image: none;

  /* Primary theme accents */
  --primary-cyan: #38bdf8; /* light blue */
  --primary-blue-light: #7dd3fc;
  }

* {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  margin: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: var(--text-base);
  line-height: 1.6;
  color: #e6eef6;

  /* Layered background: image on top, subtle radial vignette, and a deep gradient fallback */
    background-image: var(--app-bg-image),
                    radial-gradient(1000px 500px at 10% 10%, rgba(2,6,12,0.55) 0%, transparent 30%),
                    linear-gradient(180deg,#02111a 0%, #061424 45%, #071727 100%);
  background-repeat: no-repeat, no-repeat, no-repeat;
  background-position: center center, 10% 10%, center center;
  background-size: cover, cover, cover;
  background-attachment: fixed;

  /* Blend the image with a dark overlay so content remains readable */
  background-blend-mode: overlay, normal, normal;

  /* Optional helper: if you need a stronger overlay for very bright images,
     add the class `strong-bg-overlay` to the body element in index.js */

  overflow-x: hidden;
}

/* Helper class you can toggle on the <body> to add an extra dark overlay
   without changing the background image itself. Useful for high-contrast
   backgrounds where text becomes hard to read. */
.strong-bg-overlay::before {
  content: '';
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.45);
  pointer-events: none;
  z-index: 5;
}

/* Enhanced Focus Styles for Accessibility */
*:focus {
  outline: 2px solid var(--primary-cyan);
  outline-offset: 2px;
}

*:focus:not(:focus-visible) {
  outline: none;
}

*:focus-visible {
  outline: 2px solid var(--primary-cyan);
  outline-offset: 2px;
}

/* Typography Improvements */
h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: -0.025em;
}

h1 {
  font-size: var(--text-6xl);
}

h2 {
  font-size: var(--text-4xl);
}

h3 {
  font-size: var(--text-3xl);
}

h4 {
  font-size: var(--text-2xl);
}

h5 {
  font-size: var(--text-xl);
}

h6 {
  font-size: var(--text-lg);
}

p {
  margin: 0 0 var(--space-4);
}

code {
  font-family: 'JetBrains Mono', 'Fira Code', source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
  font-size: 0.875em;
  background-color: var(--gray-800);
  border-radius: var(--radius-sm);
  padding: var(--space-1) var(--space-2);
}

/* Enhanced Scrollbar Styling */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--gray-800);
  border-radius: var(--radius-md);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(to bottom, var(--primary-cyan), var(--primary-orange));
  border-radius: var(--radius-md);
  transition: background var(--duration-normal) var(--timing-ease-out);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(to bottom, #0891b2, #ea580c);
}

/* Utility Classes for Enhanced UI */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.glass-strong {
  background: rgba(8, 10, 12, 0.6); /* darker glass so cards pop */
  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
  border: 1px solid rgba(255, 255, 255, 0.06);
}

/* Elevated card helper used to make cards pop against busy backgrounds */
.card-elevated {
  box-shadow: 0 10px 30px rgba(2,6,23,0.6), 0 4px 10px rgba(2,6,23,0.4);
  border-radius: 14px;
  border: 1px solid rgba(255,255,255,0.04);
  background: rgba(6,10,14,0.72);
  z-index: 10;
}

.gradient-text {
  background: linear-gradient(135deg, var(--primary-cyan) 0%, var(--primary-orange) 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.gradient-border {
  position: relative;
}

.gradient-border::before {
  content: '';
  position: absolute;
  inset: 0;
  padding: 2px;
  background: linear-gradient(135deg, var(--primary-cyan), var(--primary-orange));
  border-radius: inherit;
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask-composite: exclude;
}
/* Loading Animation */
@keyframes shimmer {
  0% {
    background-position: -200px 0;
  }
  100% {
    background-position: calc(200px + 100%) 0;
  }
}

.shimmer {
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.1) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  background-size: 200px 100%;
  animation: shimmer 1.5s infinite;
}

/* Enhanced Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.animate-fade-in-up {
  animation: fadeInUp var(--duration-slow) var(--timing-ease-out) both;
}

.animate-fade-in-scale {
  animation: fadeInScale var(--duration-slow) var(--timing-ease-out) both;
}

.animate-slide-in-left {
  animation: slideInLeft var(--duration-slow) var(--timing-ease-out) both;
}

.animate-slide-in-right {
  animation: slideInRight var(--duration-slow) var(--timing-ease-out) both;
}

/* Stagger animation delays */
.stagger-1 { animation-delay: 0.1s; }
.stagger-2 { animation-delay: 0.2s; }
.stagger-3 { animation-delay: 0.3s; }
.stagger-4 { animation-delay: 0.4s; }
.stagger-5 { animation-delay: 0.5s; }

/* Screen reader only content */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  :root {
    --primary-cyan: #00d4ff;
    --primary-orange: #ff6b00;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
  
  .animate-bounce,
  .animate-pulse,
  .animate-spin {
    animation: none;
  }
}

/* ----------------------------- */
/* Layout helpers and component styles */
/* ----------------------------- */

/* Page container used across components */
.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 16px;
}

/* Navbar */
.app-navbar {
  position: sticky;
  top: 0;
  z-index: 40;
  background: linear-gradient(180deg, rgba(17,24,39,0.6), rgba(17,24,39,0.4));
  backdrop-filter: blur(6px);
}

.app-navbar .container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.app-navbar .brand {
  display: flex;
  align-items: center;
  gap: 10px;
}

.app-navbar .brand div[aria-hidden] {
  width: 36px;
  height: 36px;
  border-radius: 8px;
  box-shadow: var(--shadow-md);
}

.nav-links {
  display: flex;
  gap: 8px;
  align-items: center;
}

.nav-links.open {
  display: flex;
}

.nav-link {
  color: var(--gray-200);
  padding: 8px 12px;
  border-radius: 8px;
  text-decoration: none;
  transition: color var(--duration-fast) var(--timing-ease-out), background var(--duration-fast) var(--timing-ease-out), transform var(--duration-fast);
}

.nav-link:hover {
  color: #fff;
  background: rgba(255,255,255,0.03);
  transform: translateY(-1px);
}

.nav-link.active,
.nav-link.text-blue-600,
.nav-link.font-semibold {
  color: var(--primary-cyan);
  font-weight: 600;
}

.mobile-menu-button {
  display: none;
  background: transparent;
  border: none;
  color: var(--gray-200);
  font-size: 20px;
}

.nav-cta .btn {
  border-radius: 10px;
  padding: 8px 14px;
  font-weight: 600;
  box-shadow: var(--shadow-sm);
}

/* Footer */
/* Footer: darker navy gradient with accent and improved layout */
.footer {
  padding: 40px 16px;
  border-top: 1px solid rgba(255,255,255,0.03);
  background: linear-gradient(180deg, #031026 0%, #071728 50%, #071422 100%);
  color: var(--gray-100);
}

.footer .container { max-width: 1100px; }

.footer-grid {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(4, 1fr);
  align-items: start;
}

.brand-title { font-weight: 700; font-size: 18px; margin-bottom: 8px; color: #fff }
.footer-desc { color: var(--gray-300); max-width: 320px; line-height: 1.5 }

.footer-section-title { font-weight: 600; margin-bottom: 8px; color: #f8fafc }
.footer a { color: var(--gray-300); text-decoration: none; transition: color var(--duration-fast); }
.footer a:hover { color: var(--primary-cyan); }

.newsletter { display:flex; gap:8px; align-items:center }
.newsletter-input { background: rgba(255,255,255,0.03); border:1px solid rgba(255,255,255,0.04); padding:8px 10px; border-radius:8px; color:var(--gray-100); min-width: 180px }
.btn.btn-secondary { background: linear-gradient(90deg,#0ea5b7,#2563eb); color: #fff; border: none; padding: 8px 12px; border-radius: 8px; font-weight: 600 }
.btn.btn-secondary:hover { transform: translateY(-1px); box-shadow: var(--shadow-md) }

.footer .copy { margin-top: 28px; color: var(--gray-400); text-align: center }

@media (max-width: 900px) {
  .footer-grid { grid-template-columns: repeat(2, 1fr); }
}

@media (max-width: 640px) {
  .mobile-menu-button { display: inline-flex; align-items: center; justify-content:center; }
  .nav-links { display: none; }
  .nav-links.open { display: flex; flex-direction: column; gap: 6px; margin-top: 8px; padding: 8px; background: rgba(255,255,255,0.02); border-radius: 8px; position: absolute; right: 16px; top: 64px; box-shadow: var(--shadow-lg); }
  .app-navbar .container { position: relative; }
  .footer-grid { grid-template-columns: 1fr; }
}

/* Info cards used as summaries above tables */
.info-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  margin-bottom: 18px;
}
.info-card {
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
  border: 1px solid rgba(255,255,255,0.04);
  padding: 16px;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
}
.info-card .label { color: var(--gray-300); font-size: 0.9rem; margin-bottom: 6px }
.info-card .value { font-weight: 700; font-size: 1.5rem; color: #fff }

/* Accent helper that uses the theme cyan */
.accent-cyan { color: var(--primary-cyan) !important; }

/* Accent buttons using the theme cyan */
.btn-accent {
  background: var(--primary-cyan);
  color: #06283d;
  padding: 8px 12px;
  border-radius: 8px;
  font-weight: 600;
  border: none;
  box-shadow: 0 8px 20px rgba(56,189,248,0.12);
  cursor: pointer;
  transition: transform var(--duration-fast), filter var(--duration-fast);
}
.btn-accent:hover { transform: translateY(-2px); filter: brightness(0.96); }

.btn-outline {
  background: transparent;
  color: #e6eef6;
  padding: 8px 12px;
  border-radius: 8px;
  border: 1px solid rgba(255,255,255,0.06);
  cursor: pointer;
  transition: background var(--duration-fast), transform var(--duration-fast);
}
.btn-outline:hover { background: rgba(255,255,255,0.02); transform: translateY(-1px); }

@media (max-width: 800px) {
  .info-cards { grid-template-columns: repeat(2, 1fr); }
}
@media (max-width: 480px) {
  .info-cards { grid-template-columns: 1fr; }
}

/* Larger stat card used for top performers */
.stat-card {
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
  border: 1px solid rgba(255,255,255,0.04);
  padding: 20px;
  border-radius: 14px;
  box-shadow: var(--shadow-lg);
}
.stat-card .stat-title { font-weight: 700; color: #fff; font-size: 1.125rem; }
.stat-card .stat-value { font-weight: 800; font-size: 2.5rem; color: var(--primary-cyan); }
.stat-card .stat-sub { color: var(--gray-300); margin-top: 8px }

@media (max-width: 800px) {
  .stat-card .stat-value { font-size: 2rem }
}

/* --- Global Theme & Color Palette for the Auction Portal --- */
:root {
    --bg-dark: #0f0c29;
    --bg-mid: #302b63;
    --bg-light: #24243e;
    --primary-glow: #ffae00; /* Vibrant Gold/Orange */
    --secondary-glow: #00e5ff; /* Electric Blue */
    --text-light: #f0f0f0;
    --text-muted: #a0a0b0;
    --red-accent: #ff3366;
    --green-accent: #33ff99;
}

/* --- Keyframe Animations for a Dynamic Feel --- */

/* Pulsing animation for the urgent timer */
@keyframes pulse-red {
    0%, 100% {
        transform: scale(1);
        text-shadow: 0 0 10px rgba(255, 51, 102, 0.7);
    }
    50% {
        transform: scale(1.05);
        text-shadow: 0 0 25px rgba(255, 51, 102, 1);
    }
}

/* Glowing border for the highest bidder */
@keyframes glow-orange {
    0%, 100% {
        box-shadow: 0 0 15px var(--primary-glow);
    }
    50% {
        box-shadow: 0 0 30px var(--primary-glow), 0 0 40px var(--primary-glow);
    }
}

/* Fade in/out animation for the sold overlay */
@keyframes fade-in-out-zoom {
  0% { opacity: 0; transform: scale(0.8); }
  15%, 85% { opacity: 1; transform: scale(1); }
  100% { opacity: 0; transform: scale(1.2); }
}

/* Gavel slamming animation */
@keyframes gavel-slam {
    0% { transform: rotate(40deg); }
    50% { transform: rotate(-15deg); }
    100% { transform: rotate(0deg); }
}

/* New bids sliding in animation */
@keyframes slide-in-bottom {
    from {
        opacity: 0;
        transform: translateY(15px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}


/* --- Custom Classes to Apply Animations and Styles --- */

.auction-portal-bg {
    background: linear-gradient(135deg, var(--bg-dark), var(--bg-mid), var(--bg-light));
}

.timer-pulse {
    animation: pulse-red 1s infinite;
}

.highest-bidder-glow {
    animation: glow-orange 1.5s infinite ease-in-out;
}

.sold-overlay-animation {
    animation: fade-in-out-zoom 4s ease-in-out forwards;
}

.gavel-animation {
    animation: gavel-slam 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.2s forwards;
    transform-origin: bottom right;
}

.bid-history-item {
    animation: slide-in-bottom 0.4s ease-out;
}
